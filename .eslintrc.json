{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "indent": [
      2,
      4,
      {
        "SwitchCase": 1
      }
    ],
    "max-len": [
      2,
      120
    ],
    "no-constant-condition": 0,
    "no-unused-var": 1,
    "valid-jsdoc": 1
  }
}
