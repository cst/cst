{
	"validateIndentation": 4,
	"maximumLineLength": {
        "value": 120,
        "allExcept": ["urlComments"]
    },
    "esnext": true,
	"jsDoc": {
        // "checkAnnotations": "jsdoc3", See https://github.com/jscs-dev/jscs-jsdoc/issues/118
        "checkParamNames": true,
        "requireParamTypes": true,
        "checkRedundantParams": true,
        // "checkReturnTypes": true, See https://github.com/jscs-dev/jscs-jsdoc/issues/115
        "checkRedundantReturns": true,
        "requireReturnTypes": true,
        "checkTypes": "capitalizedNativeCase",
        "checkRedundantAccess": true,
        "requireNewlineAfterDescription": true
    },
	"preset": "google",
    "excludeFiles": ["test/3rdParty/babylon/**"]
}
